{% extends '::base.html.twig' %}

{% block body -%}
    <h1>widget list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Contenido</th>
                <th>Coordenadas</th>
                <th>Tipo</th>
                <th>Onetomany</th>
                <th>Pagina</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('widget_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.contenido }}</td>
                <td>{{ entity.coordenadas }}</td>
                <td>{{ entity.tipo }}</td>
                <td>{{ entity.oneToMany }}</td>
                <td>{{ entity.pagina }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('widget_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('widget_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('widget_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
